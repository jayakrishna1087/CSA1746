# List of sections for the blog
sections = [
    "How to Manually Create Anchor Links in WordPress",
    "How to Create Anchor Links in WordPress with a Plugin",
    "How to Create Anchor Links in WordPress with Gutenberg"
]

# Generate HTML anchor links
def generate_anchor_links(sections):
    html = "<ul>\n"
    for section in sections:
        # Create an ID by converting to lowercase and replacing spaces with hyphens
        section_id = section.lower().replace(" ", "-")
        html += f'    <li><a href="#{section_id}">{section}</a></li>\n'
    html += "</ul>\n"
    return html

# Generate the HTML for the content sections
def generate_content_sections(sections):
    html = ""
    for section in sections:
        section_id = section.lower().replace(" ", "-")
        html += f'<h3 id="{section_id}">{section}</h3>\n'
        html += f'<p>Content for "{section}" goes here...</p>\n\n'
    return html

# Generate full HTML
html_output = "<title>My Blog Page Title</title>\n\n"
html_output += generate_anchor_links(sections)
html_output += generate_content_sections(sections)

# Save to file
with open("blog_page.html", "w") as f:
    f.write(html_output)

print("HTML for anchor links generated and saved to blog_page.html")
`
